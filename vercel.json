{
    "version": 2,
    "builds": [
      {
        "src": "client", 
        "use": "@vercel/static"
      },
      {
        "src": "server.js", 
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["db.json"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/.*", 
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/index.html"
      }
    ]
  }
  