{
    "version": 2,
    "builds": [
      {
        "src": "client", // Angular app source directory
        "use": "@vercel/static"
      },
      {
        "src": "server.js", // JSON server source file
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["db.json"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/.*", // JSON server endpoints
        "dest": "server.js"
      },
      {
        "src": "/(.*)", // Angular app route
        "dest": "client/index.html"
      }
    ]
  }
  